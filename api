// api/chat.js
export default async function handler(req, res) {
  // This value is pulled from your private Vercel Settings
  const API_KEY = process.env.GROQ_API_KEY; 
  const { prompt } = req.body;

  try {
    const response = await fetch("https://api.groq.com/openai/v1/chat/completions", {
      method: "POST",
      headers: {
        "Authorization": `Bearer ${API_KEY}`,
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        model: "llama-3.3-70b-versatile",
        messages: [
          { 
            role: "system", 
            content: "You are Joshua, the digital assistant for Christ Love Ministries Rundu. Apostle Joseph K.L is the leader. Keep your tone spiritual and focused on the 2026 Mandate." 
          },
          { role: "user", content: prompt }
        ],
      }),
    });

    const data = await response.json();
    res.status(200).json({ text: data.choices[0].message.content });
  } catch (error) {
    res.status(500).json({ error: "Failed to connect to Joshua" });
  }
}
